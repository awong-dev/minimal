  "dependencies": {
    "express": "^4.16.3",
    "winston": "^3.1.0"
  },
  "scripts": {
    "deploy": "npm run webpack && firebase deploy",
    "lint:js": "eslint --quiet --ext .js --ext .jsx client device",
